@model bool

<nav class="navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
    <img src="~/images/logoipsum-213.svg" alt="Logo"/>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        @if (ViewBag.OrgPickerTenantList != null ) {
        <select name="orgSelector" id="orgSelector" class="form-control form-control-sm w-auto" onchange="location.href = this.value">
            @foreach (var details in ViewBag.OrgPickerTenantList)
            {
              @if (details.TenantId == ViewBag.OrgPickerCurrentTenantId) {
                <option value="@Url.Action("Index", "Home", new { tenantId = @details.TenantId })" selected="selected">@details.TenantName</option>
              } else {
                <option value="@Url.Action("Index", "Home", new { tenantId = @details.TenantId })">@details.TenantName</option>
              }
            }
        </select>
        }
        
        <ul class="navbar-nav ml-auto">
          
        @if (User.Identity.IsAuthenticated) {
          <li class="nav-item">
              <a class="nav-link" type="button" class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Disconnect">
                <img src="~/images/disconnect-white.svg" alt="Disconnect to Xero button" width="170">
              </a>
          </li>
          <li class="nav-item">
              <a class="custom-nav-btn btn btn-light" role="button" aria-pressed="true" asp-area="" asp-controller="Home" asp-action="Reconnect">Reconnect to Xero</a>
          </li>
          <li class="nav-item">
              <a class="custom-nav-btn btn btn-light" role="button" aria-pressed="true" asp-area="" asp-controller="Home" asp-action="Revoke">Revoke Xero Token</a>
          </li>
          <li class="nav-item">
              <a class="custom-nav-btn btn btn-light" role="button" aria-pressed="true" asp-area="" asp-controller="Home" asp-action="SignOut">Sign out</a>
          </li>
        }
        </ul>
    </div>
</nav>